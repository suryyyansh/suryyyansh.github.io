---
import background from '../assets/background.svg';
import Nav from "./Nav.astro";
import Sidebar from './Sidebar.astro'

const { sidebar = false, title } = Astro.props;

const grid_template_style = !(sidebar) ? `
"nav nav"
"main main"`
:
`"nav main"
"sidebar main"`
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="nav_grid_item">
			<Nav />
		</div>
		{sidebar &&
			<div id="sidebar_grid_item">
				<Sidebar directoryName="writeups" title={title} />
			</div>
		}
		<div id="main_grid_item">
			<slot />
		</div>
	</body>
</html>

<style define:vars={{grid_template_style}}>

	/* #background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(1000px);
	} */

	#nav_grid_item {
		grid-area: nav;
	}

	#sidebar_grid_item {
		grid-area: sidebar;
	}

	#main_grid_item {
		grid-area: main;
		padding: 10px;
		border: 1px solid #0c0c0c;
		border-radius: 14px 14px 0px 0px;
		border-bottom-width:0px;
        box-shadow: 0 0 2px 0px #0c0c0c inset, 0 0 2px 0px #0c0c0c;
	}

	html {
		width: 100%;
		max-height: 100%;
		padding:0px;
		margin:0px;
		
	}
	body {
		padding:10px 10px 0px 10px;
		margin:0px;
		max-height: 100%;
		background-color:#FBF3D5;
		display: grid;
		grid-template-columns: minmax(0, 1fr) 3fr;
		/* grid-template-rows: auto; */
		grid-template-areas: var(--grid_template_style);
		grid-template-rows: auto 1fr;
		gap: 6px
	}

</style>
