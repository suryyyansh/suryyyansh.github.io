---
import background from '../assets/background.svg';
import Nav from "./Nav.astro";
import Sidebar from './Sidebar.astro'

const { sidebar = false, title } = Astro.props;

const grid_template_style = !(sidebar) ? `
"nav nav"
"main main"`
:
`"nav main"
"sidebar main"`
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="nav_grid_item">
			<Nav />
		</div>
		{sidebar &&
			<div id="sidebar_grid_item">
				<Sidebar directoryName="writeups" title={title} />
			</div>
		}
		<div id="main_grid_item">
			<slot />
		</div>
	</body>
</html>

<style define:vars={{grid_template_style}}>

	#nav_grid_item {
		grid-area: nav;
	}

	#sidebar_grid_item {
		grid-area: sidebar;
	}

	#main_grid_item {
		grid-area: main;
		padding: 30px;
		border: 1px solid #0c0c0c;
		border-radius: 14px ;
        box-shadow: 0 0 2px 0px #0c0c0c inset, 0 0 2px 0px #0c0c0c;
		overflow-y: scroll;
	}

	html, body {
		width: 100%;
		height: 100%;
		margin:0px;
		padding: 0px;
		/* padding:0px; */
	}
	body {
		background-color:#FBF3D5;
		display: grid;
		grid-template-columns: minmax(0, 1fr) 4fr;
		grid-template-areas: var(--grid_template_style);
		grid-template-rows: auto 1fr;
		gap: 6px;
		padding: 6px;
		box-sizing: border-box;
	}

</style>
